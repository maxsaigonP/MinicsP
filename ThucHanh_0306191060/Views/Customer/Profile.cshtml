@model IEnumerable<ThucHanh_0306191060.Areas.Admin.Models.Account>
<article class="p-4 p-xl-5 text-center">
    <img src="~/images/account/@ViewBag.avatar" class="img-avatar img-md" id="img">

    <h6 class="card-title mt-3">@ViewBag.username</h6>
    <p> Số điện thoại : @ViewBag.phone <br> Địa chỉ: @ViewBag.address <br> Email: @ViewBag.email</p>
    <a asp-action="edit" asp-route-id="@ViewBag.userid" class="btn btn-warning"> Chỉnh sử trang cá nhân </a><a asp-action="accounthistory" asp-controller="customer" class="btn btn-danger"> History </a> <a asp-action="logout" asp-controller="home" asp-area="admin" class="btn btn-success">Đăng xuất </a>
</article>

@section CSS{
    <style>
        #img {
            width: 150px;
        }
    </style>
 }