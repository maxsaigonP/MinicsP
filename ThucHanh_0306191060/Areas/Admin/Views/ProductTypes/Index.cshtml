@model ThucHanh_0306191060.Areas.Admin.Models.ProductType

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<h3>Create</h3>
<div class="row">
    <div class="col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>Tên loại
                <input name="Name" class="form-control" />
                @*<span asp-validation-for="TenLoai" class="text-danger"></span>*@
            </div>
            @*<div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" hidden  checked asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                    </label>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<h3>Edit</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label" hidden>
                    <input class="form-check-input" asp-for="Status"  /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Producttype Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.lstloai)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Products.Count
            </td>
            <td>
                @item.Status
            </td>
            <td>
                <a asp-action="Index" id="edit" idP="@item.Id" asp-route-id="@item.Id" class="badge badge-outline-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="badge badge-outline-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-outline-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}