@model IEnumerable<ThucHanh_0306191060.Areas.Admin.Models.Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" method="post">
    <input type="text" name="search" value="" />
    <button type="submit">Search</button>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Product.Name)*@ Product name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a asp-action="productdetail" asp-controller="Product" asp-route-id="@item.ProductId" asp-area="" class="badge badge-outline-warning">View</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
