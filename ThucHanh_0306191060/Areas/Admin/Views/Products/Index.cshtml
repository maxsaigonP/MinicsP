@model IEnumerable<ThucHanh_0306191060.Areas.Admin.Models.Product>
@using PagedList.Mvc;
@using PagedList;


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Index" method="post">
    <input type="text" name="search" value="" />
    <button type="submit">Search</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@ Product name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Description)*@ Description
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Price)*@ Price
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Quantily)*@ Quantity
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ProductType)*@ Producttype
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Image)*@ Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                
                    @Html.DisplayFor(modelItem => item.Description)
              
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantily)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType.Name)
                </td>
                <td>
                    <img id="imgPreview" style="width: 100px" src="~/images/product/@(item.Image)" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="badge badge-outline-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="badge badge-outline-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

